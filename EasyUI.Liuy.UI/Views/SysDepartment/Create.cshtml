@model EasyUI.Liuy.Domain.Models.SysDepartment 
@{
    ViewBag.Title = "Create";
}
<script>
    function ff_submit() {
        $('#ff').form('submit', {
            success: function (data) {
                if (data == "OK") {
                    window.location.href = "/SysDepartment/Index";
                }
            }
        });
    }
</script>
 

@using (Html.BeginForm("Create", "SysDepartment", FormMethod.Post, new { id = "ff", enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)
    <div class="easyui-panel" title="创建部门">
        <fieldset>
            <legend>部门</legend>

            <div class="editor-label">
               部门名称
            </div>
            <div class="editor-field">
                @Html.EditorFor(model => model.Name)
              
            </div>

            <div class="editor-label">
            夫栏目ID
            </div>
            <div class="editor-field">
                @Html.EditorFor(model => model.ParentId)
                 
            </div>

            <div class="editor-label">
                排序
            </div>
            <div class="editor-field">
                @Html.EditorFor(model => model.Sort)
               
            </div>

            <div class="editor-label">
              状态
            </div>
            <div class="editor-field">
                @Html.EditorFor(model => model.State)
                
            </div>

            <p>
                @Html.ActionLink("添加", null, null, new { onclick = "ff_submit()", iconcls = "icon-add", @class = "easyui-linkbutton", href = "javascript:void(0)" })

                @Html.ActionLink("返回", "Index", null, new { @class = "easyui-linkbutton", iconcls = "icon-back" })
            </p>
        </fieldset>
    </div>
}





