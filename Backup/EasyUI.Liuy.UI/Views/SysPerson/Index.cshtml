                { field: 'Village', title: '省份', width: 100 },
                { field: 'State', title: '状态', width: 100 },
                { field: 'Type', title: '等别', width: 100 }

            ]],
            toolbar: [{//在dategrid表单的头部添加按钮
                text: "添加",
                iconCls: "icon-add",
                handler: function () {
                    ShowAddDialog();
                }
            }, '-', {//'-'就是在两个按钮的中间加一个竖线分割，看着舒服
                text: "删除",
                iconCls: "icon-remove",
                handler: function () {
                    ShowDeleteDialog();

                }
            }, '-', {
                text: "修改",
                iconCls: "icon-edit",
                handler: function () {
                    ShowUpdateDialog();
                }
            }, '-']

        });
    });
    //点击添加事件
    function ShowAddDialog() {
        // $("#AddDialog").dialog("open").dialog('setTitle', '添加用户信息');
        window.location.href = "/SysPerson/Create";
    }
    //点击删除事件
    function ShowDeleteDialog() {
        if (confirm("确定删除？")) {
            var id = $("#dg").datagrid("getSelections")[0].Id;

            $.post(
                "/SysPerson/Delete",
                  { id: id },
                 function (date) {
                     if (date == "OK") {
                         //    $("#UpdateDialog").dialog('close');

                         $("#dg").datagrid('reload');
                     }
                     else {
                         alert("修改失败，请检查");
                     }
                 }
                );
        }

    }
    //点击修改事件
    function ShowUpdateDialog() {


        //    $("#UpdateDialog").dialog("open").dialog("setTitle", "修改用户信息");

        //绑定显示修改的详细信息的内容
        // BingUpdateDialog();
        window.location.href = "/SysPerson/Edit/" + $("#dg").datagrid("getSelections")[0].Id;;
    }
    //绑定修改用户的信息显示在用户的TextBox文本框中
    function BingUpdateDialog() {
        //首先获取选中的用户的ID
        var id = $("#dg").datagrid("getSelections")[0].Id;

        $("#UpdateInfo").form("load", $("#dg").datagrid("getSelections")[0]);
        //使用异步的getJSON请求绑定前台传递过来的数据


    }

    //修改信息
    function UpdateClickEvent() {
        $("#btn-update").click(function () {

            //首先判断前台的验证是否通过
            var valid = $('#UpdateInfo').form('validate');
            if (valid == false) {
                return false;
            }

            //使用异步实现修改用户信息

            $.post(
                "/SysPerson/Edit",
                $("#UpdateInfo").form().serialize(),

                function (date) {
                    if (date == "OK") {
                        //$("#UpdateInfo").form("reset");
                        $("#UpdateDialog").dialog('close');
                        $("#dg").datagrid('reload');
                    }
                    else {
                        alert("修改失败，请检查");
                    }
                });
        });

    }

    //添加信息

    function AddClickEvent() {
        $("#btn-add").click(function () {
            //首先判断前台的验证是否通过
            var valid = $('#AddInfo').form('validate');
            if (valid == false) {
                return false;
            }
            $.post(
                      "/SysPerson/Create",
                         sy.serializeObject($("#AddInfo").form()),
                      function (date) {
                          if (date == "OK") {
                              $("#AddInfo").form("reset");
                              $("#AddDialog").dialog('close');
                              $("#dg").datagrid('reload');
                          }
                          else {
                              alert("修改失败，请检查");
                          }
                      });
        });
    }

    //获取勾选项
    function getSelectedArr() {
        var ids = [];
        var rows = $("#dg").datagrid('getSelections');
        for (var i = 0; i < rows.length; i++) {
            ids.push(rows[i].ID);

        }
        return ids;
    }
    //给选中的数组添加间隔号
    function getSelectedID() {
        var ids = getSelectedArr();
        return ids.join(',');
    }
</script>
